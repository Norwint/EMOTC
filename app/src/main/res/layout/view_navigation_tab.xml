<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/navigation_tabDashboard"
            style="@style/tab_layout"
            android:visibility="visible">

            <ImageView
                android:id="@+id/navigation_tabDashboardSelector"
                style="@style/tab_icon"
                android:src="@drawable/dashboard"
                app:tint="@color/white" />

            <ImageView
                style="@style/tab_triangle" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabLocation"
            style="@style/tab_layout">

            <ImageView
                android:id="@+id/navigation_tabLocationSelector"
                style="@style/tab_icon"
                android:src="@drawable/settings"
                app:tint="@color/white"/>

            <ImageView
                style="@style/tab_triangle" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabTracklog"
            style="@style/tab_layout">

            <ImageView
                android:id="@+id/navigation_tabTracklogSelector"
                style="@style/tab_icon"
                android:src="@drawable/services_community"
                app:tint="@color/white"/>

            <ImageView
                style="@style/tab_triangle" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/navigation_tabNotifications"
            style="@style/tab_layout">

            <ImageView
                android:id="@+id/navigation_tabNotificationSelector"
                style="@style/tab_icon"
                android:src="@drawable/update_diagnostic"
                app:tint="@color/white"/>

            <ImageView
                style="@style/tab_triangle" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>