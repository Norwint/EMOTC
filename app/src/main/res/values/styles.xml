<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="otp_editxt_numberic_grey_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">5dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_width">22pt</item>
        <item name="android:layout_height">22pt</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/cus_otp_bg</item>
    </style>

    <style name="tab_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tab_triangle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:src">@drawable/menu_icons1</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>